<div>
 <h1>Companies</h1>
<table class="form-control">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Commercial Activity</th>
    <th>Cellphhone</th>
    <th>Phone</th>
    <th colspan="4"></th>
  </tr>
 
  <% @companies.each do |comp| %>
    <tr>
      <td><%= comp.name %></td>
      <td><%= comp.address %></td>
      <td><%= comp.city %></td>
      <td><%= comp.state %></td>
      <td><%= comp.commercial_activity %></td>
      <td><%= comp.cellphone %></td>
      <td><%= comp.phone %></td>
      <td>
        <%= link_to 'Show', comp %>
        <%= link_to 'Edit company', edit_company_path(comp) %>
      </td>

    </tr>
  <% end %>
  <%= link_to 'New company', new_company_path %>
</table>
</div>
