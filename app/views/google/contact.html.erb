<div class="w3-container w3-container w3-center w3-animate-opacity w3-flat-midnight-blue">
  <% unless @contacts.nil?%>
      <% @contacts.each do |c|%>
      <table class="w3-table">
          <tr>
            <th>Name</th>
            <th>Phone number</th>
            <th>Email</th>
            <th colspan="4"></th>
          </tr>
          <tr>
            <td><%= c[:name] %></td>
            <td><%= c[:phone_number] %></td>
            <td><%= c[:email]%></td>
          </tr>
      </table>
    <% end%>
  <% end%>
</div>
