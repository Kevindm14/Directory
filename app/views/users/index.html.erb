<div class="w3-display-topmiddle w3-center w3-animate-top w3-flat-midnight-blue w3-margin-right">
 <h1 class="w3-container w3-teal">Users</h1>
<table class="w3-table">
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Address</th>
    <th>Email</th>
    <th>City</th>
    <th>State</th>
    <th>Cellphone</th>
    <th>Phone</th>
    <th>Company</th>
    <th colspan="4"></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.address %></td>
      <td><%= user.email %></td>
      <td><%= user.city %></td>
      <td><%= user.state %></td>
      <td><%= user.cellphone %></td>
      <td><%= user.phone %></td>
      <td><%= user.company.try(:name) %></td>
      <td class="w3-button w3-yellow"><%= link_to 'Show', user %><td>
      <td class="w3-button w3-blue"><%= link_to 'Edit user', edit_user_path(user) %></td>
      <td class="w3-button w3-red"><%= link_to 'Delete user', user,
                       method: :delete,
                       data: { confirm: 'Â¿Are you sure?'} %>
      </td>
    </tr>
  <% end %>
  <%= link_to 'New User', new_user_path %> | <%= link_to 'Companies', companies_path %>
</table>
</div>

    <div>
      <% if current_user %>
        Signed in as <strong><%= current_user.name %></strong>!
        <%= link_to "Sign out", destroy_user_session_path, method: :delete, id: "sign_out" %>
      <% end %>
    </div>